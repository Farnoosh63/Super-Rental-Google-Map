{{#if addNewCity}}
<h1> New City </h1>
  <div>
    <form>
       <div class="form-group">
         <label for="name">City name</label>
         {{input placeholder="city name" value=name id="name"}}
       </div>
       <div class="form-group">
         <label for="country">Country</label>
         {{input placeholder="country" value=country id="country"}}
       </div>
       <button {{action 'saveCity'}}>Save</button>
     </form>
   </div>
 {{else}}
    <button {{action 'cityFormShow'}}>New City</button>
{{/if}}
